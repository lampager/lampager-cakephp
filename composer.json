{
    "name": "lampager/lampager-cakephp",
    "description": "Rapid pagination for CakePHP 4",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Chitoku",
            "email": "odango@chitoku.jp"
        }
    ],
    "keywords": ["cakephp", "pagination", "paginator", "offset", "limit"],
    "autoload": {
        "psr-4": {
            "Lampager\\Cake\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lampager\\Cake\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "cakephp/cakephp": "^4.4",
        "lampager/lampager": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "php-coveralls/php-coveralls": "^2.4",
        "nilportugues/sql-query-formatter": "^1.2"
    },
    "scripts": {
        "test": "phpunit"
    }
}
